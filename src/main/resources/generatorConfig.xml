<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>

    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>

        <plugin type="tk.mybatis.mapper.generator.MapperPlugin">
            <property name="mappers" value="com.xinge.demo.common.util.MyMapper"/>
        </plugin>

        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://192.168.18.228:3306/installment"
                        userId="xinge"
                        password="123456">
        </jdbcConnection>

        <javaModelGenerator targetPackage="com.xinge.demo.model.domain" targetProject="src/main/java"/>

        <sqlMapGenerator targetPackage="mapper" targetProject="src/main/resources"/>

        <javaClientGenerator targetPackage="com.xinge.demo.mapper" targetProject="src/main/java"
                             type="XMLMAPPER"/>

        <table tableName="area" domainObjectName="AreaDO" mapperName="AreaMapper">
            <!-- 使用数据库字段原始名字生成属性，false则使用驼峰命名法 -->
            <property name="useActualColumnNames" value="true" />
        </table>
        <table tableName="bank" domainObjectName="BankDO" mapperName="BankMapper">
            <!-- 使用数据库字段原始名字生成属性，false则使用驼峰命名法 -->
            <property name="useActualColumnNames" value="true" />
        </table>
    </context>
</generatorConfiguration>  